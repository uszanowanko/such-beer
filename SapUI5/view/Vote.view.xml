<mvc:View
	controllerName="sap.ui.demo.wt.controller.Vote"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:wt="sap.ui.demo.wt.control">
	<Page
		title="{i18n>title}">
        <headerContent>
            <MenuButton text="{user>/name}">
                <menu>
                    <Menu itemSelected="onLogout">
                        <items>
                            <MenuItem text="Logout"/>
                        </items>
                    </Menu>
                </menu>
            </MenuButton>
	    </headerContent>
		<l:Grid defaultSpan="XL1 L1 M1 S1" content="{/}">
		    <Panel backgroundDesign="Solid">
		        <Text text="{name}" />
		        <Text text="{date}" />
		        <Text text="{score}%" />
                <Slider value="{myScore}" liveChange="vote"/>
<!--                <layoutData>
                    <l:GridData span="XL2 L2 M2 S2" />
                </layoutData>-->
		    </Panel>
		</l:Grid>
	</Page>
</mvc:View>
